<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StageSelect">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BattleField"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:text="Battlefield" />

                <Button
                    android:id="@+id/FinalDestination"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:text="Final Destination" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/KalosPokemonStadium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalos Pokemon Stadium" />

                <Button
                    android:id="@+id/LylatCruise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lylat Cruise" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/PokemonStadium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pokemon Staidum" />

                <Button
                    android:id="@+id/PokemonStadium2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pokemon Stadium 2" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/Smashville"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smashville" />

                <Button
                    android:id="@+id/TownAndCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Town and City" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/UnovaPokemonLeague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unova Pokemon League" />

                <Button
                    android:id="@+id/YoshiIsland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoshi's Island" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/YoshisStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoshi's Story"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>