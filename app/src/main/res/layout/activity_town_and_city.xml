<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.challengerapproaching.Stages.TownAndCity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="419dp"
        android:layout_height="343dp"
        android:layout_marginBottom="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/towncityone" />

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BF_SS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stage Stats"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/BF_SW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stage Width: 165"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_PC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platform Count: 3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_PH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platform Heights: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Left: 41.539"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Middle: 27.518"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZR9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Right: 41.539"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blast Zone Dimensions:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Top: 190"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Right: 146.776"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Left: 148.224"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Bottom: 123"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BF_BZC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Camera: 80"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
